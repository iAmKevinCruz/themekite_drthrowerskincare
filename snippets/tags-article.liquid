{% if article.tags.size > 0 %}
  <span class="article-tags">
    <i class="icon icon-folder-open"></i>
    {% for tag in article.tags %}
      <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag | capitalize }}</a>{% unless forloop.last %}, {% endunless %}
    {% endfor %}
  </span>
{% endif %}

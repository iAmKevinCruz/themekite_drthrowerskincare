//Body
body {
  background-color: $color-body-bg;
  color: $color-body-text;
  font-family: $font-body-family;
  font-weight: $font-body-weight;
  width: 100%;
  overflow-x: hidden;
}

#PageContainer {
  width: 100%;
  overflow: hidden;
  * {
    outline: none;
  }
  iframe {
    max-width: 100%;
    &.background__video {
      max-width: unset;
    }
  }
  .main-content {
    @media #{$medium-up} {
      min-height: calc(100vh - 360px);
    }
  }
}

h1, h2, h3, h4, h5, h6,
.heading-font-weight, .section-title {
  color: $color-body-title;
  font-family: $font-header-family;
/*   font-weight: $font-header-weight; */
  font-weight:400;
  font-style: $font-header-style;
}

.section-title {
  font-size: $section-title-size;
  font-weight: $section-title-weight;
  text-transform: $section-title-transform;
  margin-bottom: 1.25rem;
}

hr {
  border-color: $color-border;
}

blockquote {
  border-left-width: 3px;
  color: lighten($color-body-text, 15%);
}

.breadcrumb-wrapper {
  background-color: $color-breadcrumb-bg;
  margin-bottom:3rem;
  .breadcrumb {
    color: $color-breadcrumb-text;
    a { color: $color-breadcrumb-text; }
    span { color: lighten($color-breadcrumb-text, 10%); }
  }
}

.tabs{
   margin-bottom:2rem;
}

a, .pagination a {
  color: #4d4d4d;
/*   color: $color-link; */
  transition: all 0.2s ease-in-out;
  &:hover, &:focus { color: $color-link; }
}

{% if link_style == 'colored' %}
  .rte, .rte-raw {
    a {
      color: $color-link;
      text-decoration: none;
      &:hover {
        color: $color-link;
      }
    }
  }
{% elsif link_style == 'underline' %}
  .rte, .rte-raw {
    a {
      color: inherit;
      text-decoration: underline;
      &:hover {
        color: inherit;
        text-decoration: none;
      }
    }
  }
{% else %}
  .rte, .rte-raw {
    a {
      color: $color-link;
      text-decoration: underline;
      &:hover {
        color: $color-link;
        text-decoration: none;
      }
    }
  }
{% endif %}

.button, .shopify-payment-button .shopify-payment-button__button--unbranded {
  display: inline-block;
  background: $color-button-bg;
  color: $color-button-text;
  font-size: $button-text-size;
/*   font-weight: $button-text-weight; */
  text-transform: $button-text-transform;
  border-radius: $button-radius;
  width: auto;
  border: 1px solid transparent;
  letter-spacing: 0.5px;
  padding: 0.95em 2.15em 0.85em;
/*   box-shadow: 0 3px 12px rgba( 0, 0, 0, 0.18); */
  transition: all 0.2s ease-in-out;
  &:hover, &:focus {
    background: darken($color-button-bg, 10%);
    box-shadow: 0 3px 12px rgba( 0, 0, 0, 0.23);
    opacity: 1;
  }
  &.hollow {
    border-color: $color-button-bg;
    color: $color-button-bg;
    &:hover, &:focus {
      opacity: 1;
      border-color: darken($color-button-bg,10%);
      color: $color-button-bg;
    }
  }
  &.white {
/*     background: #fff;
    color: #111; */
    &:hover, &:focus {
      background: darken(#fff, 10%);
    }
    &.hollow {
      box-shadow: none;
      background: transparent;
      border-color: #fff;
      color: #fff;
      &:hover, &:focus {
        color: #fff;
        border-color: darken(#fff, 10%);
      }
    }
  }
  &.success  {
    background: #02bb89;
    &:hover, &:focus {
      background: darken(#02bb89, 10%);
    }
  }
  &.disabled {
    &:hover, &:focus {
      opacity: 0.25;
    }
  }
}

.shopify-payment-button .shopify-payment-button__button--unbranded[disabled] {
  &:hover {
    opacity: 0.6;
  }
}

.button.hollow, .search-bar .button {
  box-shadow: none;
  &:hover, &:focus { box-shadow: none; }
}


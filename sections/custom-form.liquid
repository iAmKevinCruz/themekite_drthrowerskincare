      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "select",
        "id": "background_image_style",
        "label": "Background Image Style",
        "default": "cover",
        "options": [
          {
            "value": "cover",
            "label": "Cover"
          },
          {
            "value": "repeat",
            "label": "Repeat"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "parallax",
        "label": "Enable Parallax Effect",
        "default": false
      },
      {
        "type": "header",
        "content": "Form Fields Style"
      },
      {
        "type": "color",
        "id": "field_bg_color",
        "label": "Field Background Color"

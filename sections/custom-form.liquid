  {
    "name": "Custom Form",
    "settings": [
      {
        "type": "header",
        "content": "General Settings"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Custom Contact Form"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>Send us a message and we will get back to you shortly.</p>"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Submit"
      },
      {
        "type": "select",
        "id": "content_alignment",
        "label": "Content Alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "header",
        "content": "Content Style"
      },
      {
        "type": "checkbox",
        "id": "enable_custom_styles",
        "label": "Enable Custom Styles",
        "default": true
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Title Font Size",
        "default": 21
      },
      {
        "type": "range",
        "id": "text_font_size",
        "min": 12,
        "max": 55,
        "step": 1,
        "unit": "px",
        "label": "Text Font Size",
        "default": 16
      },
      {
        "type": "select",
        "id": "text_shadow",
        "label": "Text shadow effect",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "soft",
            "label": "Soft"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "intense",
            "label": "Intense"
          }

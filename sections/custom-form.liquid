        "label": "Field Border Color"
      },
      {
        "type": "color",
        "id": "field_text_color",
        "label": "Field Text Color"
      },
      {
        "type": "color",
        "id": "field_label_color",
        "label": "Field Label Color"
      },
      {
        "type": "header",
        "content": "Button Style"
      },
      {
        "type": "select",
        "id": "btn_style",
        "label": "Button Style",
        "default": "full",
        "options": [
          {
            "value": "full",
            "label": "Filled"
          },
          {
            "value": "hollow",
            "label": "Hollow"
          }
        ]
      },
      {
        "type": "color",
        "id": "btn_bg_color",
        "label": "Button Background Color"
      },
      {
        "type": "color",
        "id": "btn_text_color",
        "label": "Button Text Color"
      }

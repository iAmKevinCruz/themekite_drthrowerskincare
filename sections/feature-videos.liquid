        ]
      },
      {
        "type": "header",
        "content": "Content Style"
      },
      {
        "type": "checkbox",
        "id": "enable_custom_styles",
        "label": "Enable Custom Styles",
        "default": true
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Section Title Color"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Feature Heading Color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Title Size",
        "default": 21
      },
      {
        "type": "range",
        "id": "heading_font_size",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Feature Heading Size",
        "default": 21
      },
      {
        "type": "range",
        "id": "text_font_size",
        "min": 12,
        "max": 55,
        "step": 1,
        "unit": "px",
        "label": "Text Font Size",
        "default": 14
      },
      {
        "type": "range",
        "id": "spacing_top",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Top",
        "default": 50
      },
      {
        "type": "range",
        "id": "spacing_bottom",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Bottom",
        "default": 50
      },
      {
        "type": "header",
        "content": "Background Style"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Featured Video",
        "settings": [
          {
            "type" : "text",
            "label" : "Video URL",
            "id":"single_video"
          },
          {
            "type": "url",
            "id": "icon_click_url",
            "label": "Make Icon and Title Clickable",
            "info": "Specify the URL address if you want to make the item to be clickable."
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Feature Item Title"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Short Description</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Feature Videos",
        "category": "Content",
        "blocks": [
          {
            "type": "feature"
          }
        ]
      }
    ]
  }

{% if section.settings.display_page_header %}
  {% include 'page-header', snippet_instance: section %}
{% endif %}

<div class="page-template custom-page"  data-section-id="{{ section.id }}" data-section-type="page-template">
  {% for block in section.blocks %}
    {% case block.type %}
      {% comment %}
        Page Content
      {% endcomment %}
      {% when 'page-content' %}
        <div {{ block.shopify_attributes }}>
          <div class="row">
            {% case block.settings.content_width %}
              {% when '1' %}
                {% assign content_layout = 'medium-12 large-12 columns' %}
              {% when '1-2' %}
                {% assign content_layout = 'medium-6 large-6 columns' %}
              {% when '1-3' %}
                {% assign content_layout = 'medium-6 large-4 columns' %}
              {% when '2-3' %}
                {% assign content_layout = 'medium-10 large-8 columns' %}
              {% when '3-4' %}
                {% assign content_layout = 'medium-10 large-9 columns' %}
            {% endcase %}

            <div class="{{ content_layout }} custom-page__content medium-centered large-centered">
              <div class="rte">
                {{ page.content }}
              </div>
            </div>
          </div>
        </div>

      {% comment %}
        Contact Form
      {% endcomment %}
      {% when 'contact-form' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'contact-form', section_class: 'contact-form-section', section_type: 'contact-form' -%}
        </div>

      {% comment %}
        Hero
      {% endcomment %}
      {% when 'hero' %}
        <div {{ block.shopify_attributes }}>
          {% include 'hero', snippet_instance: block, snippet_type: 'block' %}
        </div>

      {% comment %}
        Text Section
      {% endcomment %}
      {% when 'custom-text' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'custom-text', section_class: 'text-section', section_type: 'custom-text' -%}
        </div>

      {% comment %}
        Instagram Feed
      {% endcomment %}
      {% when 'instagram' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'instagram-feed', section_class: 'instagram-section', section_type: 'instagram-feed' -%}
        </div>

      {% comment %}
        Youtube Video
      {% endcomment %}
      {% when 'youtube-video' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'youtube-video', section_class: 'video-section', section_type: 'youtube-video' -%}
        </div>

      {% comment %}
        Featured Products
      {% endcomment %}
      {% when 'featured-products' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'featured-products', section_class: 'featured-products', section_type: 'featured-products' -%}
        </div>

      {% comment %}
        Recent Posts
      {% endcomment %}
      {% when 'recent-posts' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'recent-posts', section_class: 'recent-posts-section', section_type: 'recent-posts' -%}
        </div>

      {% comment %}
        Image with text
      {% endcomment %}
      {% when 'image-text' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'image-text', section_class: 'image-text-section', section_type: 'image-text' -%}
        </div>

      {% comment %}
        Google Map
      {% endcomment %}
      {% when 'google-maps' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'google-maps', section_class: 'google-map-section', section_type: 'google-map' -%}
        </div>

      {% comment %}
        Custom Html
      {% endcomment %}
      {% when 'html' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'custom-html', section_class: 'html-section', section_type: 'custom-html' -%}
        </div>

      {% comment %}
        Call To Action
      {% endcomment %}
      {% when 'call-to-action' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'call-to-action', section_class: 'cta-section', section_type: 'cta-section' -%}
        </div>

      {% comment %}
        Newsletter
      {% endcomment %}
      {% when 'newsletter' %}
        <div {{ block.shopify_attributes }}>
          {%- include 'section-helper', snippet_instance: block, snippet_type: 'block', snippet_name: 'newsletter', section_class: 'newsletter-section', section_type: 'newsletter' -%}
        </div>

      {% comment %}
        Product Embed
      {% endcomment %}
      {% when 'product-embed' %}
        <div {{ block.shopify_attributes }}>
          {% include 'product-embed', snippet_instance: block, snippet_type: 'block' %}
        </div>

    {% endcase %}
  {% endfor %}
</div>



    "name": "Footer",
    "max_blocks": 3,
    "settings": [
      {
        "type": "header",
        "content": "Newsletter Settings"
      },
      {
        "type": "checkbox",
        "id": "footer_newsletter_enable",
        "label": "Show newsletter signup",
        "default": true
      },
      {
        "type": "text",
        "id": "newsletter_form_action",
        "label": "MailChimp form action URL",
        "info": "[Where do I find my MailChimp form action URL?](https:\/\/shopify.barrelny.com\/where-do-i-find-the-mailchimp-signup-url\/)"
      },
      {
        "type": "richtext",
        "id": "footer_newsletter_title",
        "label": "Newsletter signup title",
        "default": "<p>Subscribe to our newsletter!</p>"
      },
      {
        "type": "header",
        "content": "General Settings"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Display Payment Icons",
        "default": true
      },
      {
        "type": "richtext",
        "id": "footer_copyright",
        "label": "Copyright text",
        "default": "<p>Â© <a href=\'https://outlane.co\'>Universe Theme</a> by <a href=\'https://outlane.co\'>Outlane</a>.</p>"
      },
      {
        "type": "checkbox",
        "id": "display_powered_by_shopify",
        "label": "Display \'Powered By Shopify\'",
        "default": true
      },
      {
        "type": "header",
        "content": "Info Section"
      },
      {
        "type": "checkbox",
        "id": "display_footer_info_section",
        "label": "Display Info Section",
        "default": true
      },
      {
        "type": "text",
        "id": "footer_about_heading",
        "label": "Title",
        "default": "About Us"
      },
      {
        "type": "richtext",
        "id": "footer_about_text",
        "label": "Text",
        "default": "<p>Add your text here</p>"
      },
      {
        "type": "checkbox",
        "id": "footer_social_media_icons",
        "label": "Display social media icons",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "footer-nav",
        "name": "Menu",
        "settings": [
          {
            "type": "text",
            "id": "menu_title",
            "label": "Menu Title",
            "default": "Menu"
          },
          {
            "type": "link_list",
            "id": "menu_id",
            "label": "Choose Menu",
            "default": "footer"
          }
        ]
      },
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Custom Text"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Add some text here.</p>"
          },
          {
            "type": "checkbox",
            "id": "show_social_links",
            "label": "Display Social Network Icons",
            "default": true
          }
        ]
      },
      {
        "type": "html",
        "name": "Html",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Custom Html"
          },
          {
            "type": "html",
            "id": "html",
            "label": "Html"
          }
        ]
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "footer-nav"
        }
      ]
    }
  }
{% endschema %}
